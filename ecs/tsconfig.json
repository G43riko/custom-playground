{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        /* Redirect output structure to the directory. */
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "target": "ES5",
        "allowJs": true,
        "paths": {
            "@dep-graph": [
                "./src"
            ],
            "@dep-graph/*/": [
                "./src/*"
            ]
        },
        "lib": [
            "DOM"
        ]
    },
    "files": [
        "src/index.ts"
    ]
}
